---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				margin-bottom: 3rem;
			}
			.hero h1 {
				font-size: 2rem;
				margin-bottom: 0.5rem;
			}
			.hero p {
				font-size: 1.25rem;
				color: rgb(var(--gray-dark));
				line-height: 1.6;
			}
			.recent-posts {
				margin-top: 3rem;
			}
			.recent-posts h2 {
				font-size: 1.5rem;
				margin-bottom: 1.5rem;
			}
			.posts-list {
				display: flex;
				flex-direction: column;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			.post-item {
				display: flex;
				gap: 1.5rem;
				align-items: start;
			}
			.post-item img {
				border-radius: 8px;
				width: 200px;
				height: 120px;
				object-fit: cover;
			}
			.post-content {
				flex: 1;
			}
			.post-content a {
				text-decoration: none;
				color: rgb(var(--black));
			}
			.post-content a:hover .post-title {
				color: rgb(var(--accent));
			}
			.post-title {
				font-size: 1.5rem;
				margin: 0 0 0.5rem 0;
				transition: color 0.2s ease;
			}
			.post-date {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			.post-description {
				margin: 0;
				color: rgb(var(--gray-dark));
				line-height: 1.5;
			}
			.view-all {
				display: inline-block;
				margin-top: 1.5rem;
				padding: 0.5rem 1rem;
				background: rgb(var(--accent));
				color: white;
				text-decoration: none;
				border-radius: 4px;
				transition: opacity 0.2s ease;
			}
			.view-all:hover {
				opacity: 0.9;
			}
			@media (max-width: 720px) {
				.hero h1 {
					font-size: 1.5rem;
				}
				.hero p {
					font-size: 1rem;
				}
				.post-item {
					flex-direction: column;
					gap: 1rem;
				}
				.post-item img {
					width: 100%;
					height: 200px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Hey!</h1>
				<p>
					I'm Daniela I'm a software engineer and I write about my learning journey and discoveries.
				</p>
				<p>
					Everything on this site is written by me, not AI.
				</p>
			</section>

			<section class="recent-posts">
				<h2>Recent Posts</h2>
				<ul class="posts-list">
					{posts.map((post) => (
						<li class="post-item">
							{post.data.heroImage && (
								<Image
									width={200}
									height={120}
									src={post.data.heroImage}
									alt={post.data.title}
								/>
							)}
							<div class="post-content">
								<a href={`/blog/${post.id}/`}>
									<h3 class="post-title">{post.data.title}</h3>
								</a>
								<p class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</p>
								{post.data.description && (
									<p class="post-description">{post.data.description}</p>
								)}
							</div>
						</li>
					))}
				</ul>
				<a href="/blog" class="view-all">View All Posts â†’</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
